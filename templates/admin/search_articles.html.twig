{% extends 'base.html.twig' %}
{# creer une page pour rechercher les articles #}

{% block main %}
    <section class="articles">

        {% for article in articles %}

            <article class="article">
                <h1>{{ article.title }}</h1>
                {% if article.category %}
                    <p>{{ article.category.title }}</p>
                {% else %}
                    <p>Pas de cat√©gorie</p>
                {% endif %}
                <a href="{{ path('admin_article', {'id': article.id}) }}">Voir cet article</a>
                <a href="{{ path('admin_update_article', {'id': article }) }}">Modifier cet article</a>
                <a href="{{ path('admin_delete_article', {'id':article.id }) }}">Supprimer cet article</a>
            </article>

        {% endfor %}
    </section>
{% endblock %}