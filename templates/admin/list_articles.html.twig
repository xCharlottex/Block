{% extends 'base.html.twig' %}


{% block title %}
    <title>Liste des articles</title>
{% endblock title %}


{% block main %}

    <section class="articles">

        {% for article in articles %}

            {% if article.isPublished %}
                <article class="article">
                    {# <img class="article-img" src="{{ article.image }}" alt="{{ article.title }}"> #}
                    <h1>{{ article.title }}</h1>

                    {% if article.category %}
                        <p>{{ article.category.title }}</p>
                        {% else %}
                        <p class="categorie_">Aucune cat√©gorie</p>
                    {% endif %}
                    <p>{{ article.author }}</p>
                    <a class="clique" href="{{ path('admin_article', {'id': article.id }) }}">Clique j't'ai dit</a>
                    <a class="clique" href="{{ path('admin_update_article', {'id': article.id }) }}">Modifier l'article</a>
                    <a class="clique" href="{{ path('admin_delete_article', {'id': article.id }) }}">Supprimer l'article</a>

                </article>
            {% endif %}

        {% endfor %}
    </section>

{% endblock %}

{% block footer %}
    <p class="list_articles">ici la liste des articles</p>
{% endblock %}